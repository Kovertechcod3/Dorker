{
  "logging": {
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
      "default": {
        "format": "[%(asctime)s] %(levelname)s: %(message)s",
        "datefmt": "%Y-%m-%d %H:%M:%S"
      },
      "detailed": {
        "format": "[%(asctime)s] %(levelname)s [%(name)s:%(lineno)d] %(message)s",
        "datefmt": "%Y-%m-%d %H:%M:%S"
      }
    },
    "handlers": {
      "file": {
        "class": "logging.handlers.RotatingFileHandler",
        "level": "INFO",
        "filename": "app.log",
        "maxBytes": 10485760,  # 10 MB
        "backupCount": 5,
        "formatter": "detailed"
      },
      "console": {
        "class": "logging.StreamHandler",
        "level": "DEBUG",
        "formatter": "default",
        "stream": "ext://sys.stdout"
      }
    },
    "root": {
      "level": "DEBUG",
      "handlers": [
        "file",
        "console"
      ]
    },
    "loggers": {
      "my_module": {
        "level": "DEBUG",
        "handlers": ["file", "console"],
        "propagate": false
      }
    }
  }
}
